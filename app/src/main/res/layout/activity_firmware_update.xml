<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.device.FirmwareUpdateActivity">
    <include layout="@layout/layout_title_bar"/>

    <ImageView
        android:id="@+id/iv_update_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/downloadrobot"/>
    <TextView
        android:id="@+id/tv_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/iv_update_icon"
        android:textSize="@dimen/medium_txt"
        android:textColor="@color/black"
        android:text="固件名字版本V1.0"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/green"
        android:layout_below="@+id/tv_update_version"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/tv_update_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/low_txt"
        android:layout_alignStart="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_below="@+id/view"
        android:layout_marginTop="5dp"
        android:text="大小10M"/>
    <TextView
        android:id="@+id/tv_update_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/low_txt"
        android:layout_alignStart="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_below="@+id/tv_update_size"
        android:layout_marginTop="5dp"
        android:text="固件的描述"/>
    <Button
        android:id="@+id/btn_start_update"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_txt"
        android:text="@string/start_update"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/ll_update_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="24dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/pb_update_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:progress_unreached_color="@color/darkGray"
            app:progress_reached_color="@color/green"
            app:progress_unreached_bar_height="1dp"
            app:progress_reached_bar_height="2dp"
            app:progress_text_size="@dimen/low_txt"
            app:progress_text_color="@color/green"
            app:progress_text_offset="1dp"
            app:progress_text_visibility="visible"
            app:progress_max="100"
            app:progress_current="75"
            />
        <TextView
            android:id="@+id/tv_update_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/medium_txt"
            android:textColor="@color/black"
            android:text="正在下载中75%"/>
    </LinearLayout>
</RelativeLayout>