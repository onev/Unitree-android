<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="#313535"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.device.fragment.FiveFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_txt"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="巡航模式"/>
            <com.suke.widget.SwitchButton
                android:id="@+id/btn_cruise_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:sb_show_indicator="false"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/ll_matrix"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:paddingRight="80dp"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginLeft="50dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/matrix_mode"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/low_txt"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="矩形模式"/>

            </LinearLayout>
            <View
                android:id="@+id/view_white_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/ll_matrix"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingRight="90dp"
                android:layout_below="@+id/view_white_line"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginLeft="50dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/circle_mode"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/low_txt"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="圆轨迹"/>
            </LinearLayout>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/btn_matrix_mode"
                    android:layout_marginBottom="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"/>
                <RadioButton
                    android:id="@+id/btn_circle_mode"
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"/>
            </RadioGroup>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_mode_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/low_txt"
            android:text="矩形模式设置"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/ll_clockwise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingRight="90dp"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginLeft="55dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/clockwise"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/low_txt"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="顺时针"/>

            </LinearLayout>
            <View
                android:id="@+id/view_white_lines"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/ll_clockwise"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/ll_counterclockwise"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:paddingRight="90dp"
                android:layout_below="@+id/view_white_lines"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginLeft="55dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/counterclockwise"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/low_txt"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="逆时针"/>
            </LinearLayout>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/btn_clockwise"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="2.5dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"/>
                <RadioButton
                    android:id="@+id/btn_counterclockwise"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"/>
            </RadioGroup>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_longitudinal_direction"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/low_txt"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:text="长度方向（X方向）"/>
            <TextView
                android:id="@+id/tv_longitudinal_direction"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/low_txt"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="m"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_width_direction"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/low_txt"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:text="宽度方向（Y方向）"/>
            <TextView
                android:id="@+id/tv_width_direction"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/low_txt"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="m"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_circle_radius"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5dp">
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/low_txt"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:text="圆半径"/>
            <TextView
                android:id="@+id/tv_circle_radius"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/low_txt"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="m"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_circle_number"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/low_txt"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:text="绕行圈数"/>
            <TextView
                android:id="@+id/tv_circle_number"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@color/white"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_attitude_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/white"
                android:text="姿态模式"
                />
            <com.suke.widget.SwitchButton
                android:id="@+id/btn_attitude_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:sb_show_indicator="false"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>